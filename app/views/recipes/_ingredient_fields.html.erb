<style>
  .ing_action_container * { float:right; height: 34px; font-size: 18px; padding-top: 4px; }
</style>

<div class="nested-fields">
  <div class="container-fluid">
    <div class="row-fluid form-group">
      <div class="col-xs-12">
        <%= f.text_field :name, :selected => params[:pid], class: "form-control", :placeholder => "Ingredient" %>
      </div>
    </div>
    <div class="row-fluid form-group">
      <div class="col-xs-12 col-sm-3">
        <%= f.text_field :amount, :selected => params[:pid], class: "form-control", :placeholder => " Amount" %>
      </div>
      <div class="col-xs-12 col-sm-6">
        <select class="form-control" disabled>
          <option value="">Tsp</option>
          <option value="">Tbsp</option>
          <option value="">Cup</option>
          <option value="">Ounce</option>
          <option value="">Pint</option>
          <option value="">Quart</option>
          <option value="">Pound</option>
        </select>
      </div>
      <div class="col-xs-12 col-sm-3 ing_action_container">
        <%= link_to_remove_association '<i class="ec-trashcan"></i>'.html_safe, f %>
      </div>
    </div>

    <hr>

  </div>
</div>