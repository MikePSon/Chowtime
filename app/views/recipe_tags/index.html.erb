<p id="notice"><%= notice %></p>

<h1>Listing Recipe Tags</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Icon</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipe_tags.each do |recipe_tag| %>
      <tr>
        <td><%= recipe_tag.name %></td>
        <td><%= recipe_tag.icon %></td>
        <td><%= recipe_tag.category_id %></td>
        <td><%= link_to 'Show', recipe_tag %></td>
        <td><%= link_to 'Edit', edit_recipe_tag_path(recipe_tag) %></td>
        <td><%= link_to 'Destroy', recipe_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

